{
  "name": "workchat",
  "version": "0.1.0",
  "private": true,
  "description": "WorkChat - A Work WhatsApp with enforced execution",
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@workchat/api",
    "dev:web": "turbo dev --filter=@workchat/web",
    "dev:mobile": "turbo dev --filter=@workchat/mobile",
    "build": "turbo build",
    "build:api": "turbo build --filter=@workchat/api",
    "build:web": "turbo build --filter=@workchat/web",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "db:generate": "pnpm --filter @workchat/database prisma generate",
    "db:push": "pnpm --filter @workchat/database prisma db push",
    "db:migrate": "pnpm --filter @workchat/database prisma migrate dev",
    "db:migrate:deploy": "pnpm --filter @workchat/database prisma migrate deploy",
    "db:seed": "pnpm --filter @workchat/database prisma db seed",
    "db:studio": "pnpm --filter @workchat/database prisma studio",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
